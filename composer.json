{
    "name": "studiometa/foehn",
    "description": "üçÉ A modern WordPress framework powered by Tempest, featuring attribute-based auto-discovery for hooks, post types, blocks, and more.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Studio Meta",
            "email": "agence@studiometa.fr",
            "homepage": "https://www.studiometa.fr"
        }
    ],
    "keywords": [
        "wordpress",
        "framework",
        "tempest",
        "timber",
        "gutenberg",
        "blocks",
        "fse",
        "attributes",
        "discovery"
    ],
    "homepage": "https://github.com/studiometa/foehn",
    "support": {
        "issues": "https://github.com/studiometa/foehn/issues",
        "source": "https://github.com/studiometa/foehn"
    },
    "require": {
        "php": "^8.4",
        "tempest/framework": "^2.14",
        "timber/timber": "^2.0"
    },
    "require-dev": {
        "carthage-software/mago": "1.4.1",
        "pestphp/pest": "^3.0",
        "php-stubs/acf-pro-stubs": "^6.5",
        "php-stubs/wordpress-stubs": "*",
        "php-stubs/wp-cli-stubs": "^2.12",
        "stoutlogic/acf-builder": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Studiometa\\Foehn\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Studiometa\\Foehn\\Tests\\": "tests/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage --coverage-clover=coverage/clover.xml",
        "analyse": "mago analyse",
        "lint": "mago lint && mago fmt --check",
        "fix": "mago lint --fix && mago fmt"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
