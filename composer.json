{
    "name": "studiometa/wp-tempest",
    "description": "A modern WordPress framework powered by Tempest, featuring attribute-based auto-discovery for hooks, post types, blocks, and more.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Studio Meta",
            "email": "agence@studiometa.fr",
            "homepage": "https://www.studiometa.fr"
        }
    ],
    "keywords": [
        "wordpress",
        "framework",
        "tempest",
        "timber",
        "gutenberg",
        "blocks",
        "fse",
        "attributes",
        "discovery"
    ],
    "homepage": "https://github.com/studiometa/wp-tempest",
    "support": {
        "issues": "https://github.com/studiometa/wp-tempest/issues",
        "source": "https://github.com/studiometa/wp-tempest"
    },
    "require": {
        "php": "^8.4",
        "tempest/framework": "^2.14",
        "timber/timber": "^2.0"
    },
    "require-dev": {
        "carthage-software/mago": "*",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Studiometa\\WPTempest\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Studiometa\\WPTempest\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "analyse": "mago analyse",
        "lint": "mago lint && mago fmt --check",
        "fix": "mago lint --fix && mago fmt"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
