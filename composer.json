{
    "name": "studiometa/foehn-monorepo",
    "description": "Foehn monorepo â€” development workspace",
    "type": "project",
    "license": "MIT",
    "repositories": [
        { "type": "path", "url": "packages/foehn" },
        { "type": "path", "url": "packages/installer" },
        { "type": "path", "url": "packages/starter" }
    ],
    "require": {
        "studiometa/foehn": "@dev",
        "studiometa/foehn-installer": "@dev"
    },
    "require-dev": {
        "carthage-software/mago": "^1.8",
        "composer/composer": "^2.0",
        "pestphp/pest": "^3.0",
        "php-stubs/acf-pro-stubs": "^6.5",
        "php-stubs/wordpress-stubs": "*",
        "php-stubs/wp-cli-stubs": "^2.12",
        "stoutlogic/acf-builder": "^1.12",
        "studiometa/webpack-config": "^6.3"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "packages/starter/theme/app/",
            "Studiometa\\Foehn\\Tests\\": "packages/foehn/tests/",
            "Tests\\": "packages/foehn/tests/"
        }
    },
    "scripts": {
        "test": "cd packages/foehn && ../../vendor/bin/pest",
        "test:coverage": "cd packages/foehn && ../../vendor/bin/pest --coverage --coverage-clover=../../coverage/clover.xml",
        "analyse": "mago analyse",
        "lint": "mago lint && mago fmt --check",
        "fix": "mago lint --fix && mago fmt"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "pestphp/pest-plugin": true,
            "studiometa/foehn-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
